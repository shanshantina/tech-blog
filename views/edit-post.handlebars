<section class="hero">
    <div><span>Tech Blog</span></div>
</section>

<form class="edit-post-form row justify-content-center">
    <div class="col-sm-7 row forms">    
        <div class="col-sm-12 row">           
            <h2 class="col-sm-6">Edit Post</h2>
            <a href="/dashboard" class="col-sm-6 position">&larr; Back to dashboard</a>
        </div>

        <div class="col-sm-12">
            <label for="post-title" class="form-label">Title</label>
            <input name="post-title" type="text" value="{{post.title}}" class="form-control comment-title" />
        </div>

         <div class="col-sm-12 row">
            <label for="post-content" class="form-label col-sm-6">Content</label>
            <a href="/post/{{post.id}}" class="col-sm-6 position">
                {{post.comments.length}} {{format_plural "comment" post.comments.length}}
            </a>
            <textarea name="post-content" type="text" class="form-control form-control-lg col-sm-12 comment-body" rows="6">{{post.content}}
            </textarea>
        </div>

      
        <button type="submit" class="col-sm-4 btn buttons">Update Post</button>
        <button type="button" class="delete-post-btn col-sm-4 btn buttons">Delete Post</button>
    </div>
</form>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>