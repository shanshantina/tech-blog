<section class="hero row">
    <div class="col-sm-6"><span>Dashboard</span></div>
    <div class="create-post col-sm-4">
        <a href="/dashboard/create" class="nav-link"><i class='fa fa-plus'></i>  Add Post</a>
    </div>
</section>

{{#if posts.length}} 
<section>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <div class="row">
                <div class="col-sm-6 ">
                    <a href="/post/{{post.id}}" class="post-comment">
                        {{post.comments.length}} {{format_plural "comment" post.comments.length}}
                    </a>
                </div>

                <div class="col-sm-6">
                    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
                </div>

            </div>
           
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}


