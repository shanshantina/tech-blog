<section class="hero row">
    <div class="col-sm-6"><span>Dashboard</span></div>
    <div class="create-post col-sm-4">
        <a href="/dashboard/create"><i class='fa fa-plus'></i>  Add Post</a>
    </div>
</section>

{{#if posts.length}} 
<section>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <div class="row">
                <a href="/post/{{post.id}}" class="col-sm-6 post-comment">
                    {{post.comments.length}} {{format_plural "comment" post.comments.length}}
                </a>
                <a href="/dashboard/edit/{{post.id}}" class="edit-link col-sm-6">Edit post</a>
            </div>
           
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}


